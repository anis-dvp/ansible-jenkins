pipeline {
    agent any
    environment {
        MAVARIABLE = 'DEFAUT'
    }
    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/anis-dvp/ansible-jenkins.git'
            }
        }
        stage('Ansible') {
            steps {
                ansiblePlaybook(
                    colorized: true,
                    become: true,
                    playbook: 'playbook.yml',
                    inventory: 'hosts.yml',
                    extras: '--extra-vars "mavariable=${MAVARIABLE}"'
                )
            }
        }
    }
}
